<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/taskTitleInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Task Title"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/taskDescriptionInput"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/taskDescriptionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Task Description"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTitleInput"
        app:layout_constraintBottom_toTopOf="@+id/taskDateInput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/taskDateInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Task Date (dd/MM/yyyy)"
        android:inputType="text"  
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/taskDescriptionInput"
    app:layout_constraintBottom_toTopOf="@+id/taskTimeInput"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/taskTimeInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Task Time (HH:mm)"
        android:inputType="text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/taskDateInput"
    app:layout_constraintBottom_toTopOf="@+id/saveTaskButton"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/saveTaskButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTimeInput"
        app:layout_constraintBottom_toTopOf="@+id/viewTasksButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/viewTasksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Tasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveTaskButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
